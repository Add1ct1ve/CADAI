{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "opener:default",
    "dialog:default",
    "dialog:allow-save",
    "dialog:allow-open",
    "dialog:allow-ask",
    "dialog:allow-confirm",
    "dialog:allow-message",
    "fs:default",
    "fs:allow-read",
    "fs:allow-write",
    "fs:allow-mkdir",
    "fs:allow-remove",
    "fs:allow-exists",
    {
      "identifier": "fs:scope",
      "allow": [{ "path": "$APPDATA/**" }]
    },
    "shell:default",
    "shell:allow-execute",
    "shell:allow-spawn"
  ]
}

{
  "name": "cadai-studio",
  "version": "0.1.0",
  "description": "AI-powered CAD application",
  "type": "module",
  "scripts": {
    "dev": "vite dev",
    "build": "vite build",
    "preview": "vite preview",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "playwright:install": "playwright install chromium",
    "test:e2e": "playwright test",
    "test:e2e:smoke": "playwright test tests/smoke.spec.ts",
    "test:e2e:smoke:strict": "CADAI_REQUIRE_TAURI=1 playwright test tests/smoke.spec.ts",
    "test:e2e:ui": "playwright test --ui",
    "tauri": "tauri",
    "eval:cad": "python python/evals/run_eval.py --cases-dir python/evals/cases --python-bin python --runner python/runner.py --manufacturing python/manufacturing.py --max-attempts 4"
  },
  "license": "MIT",
  "dependencies": {
    "@salusoft89/planegcs": "^1.1.7",
    "@tauri-apps/api": "^2",
    "@tauri-apps/plugin-dialog": "^2.6.0",
    "@tauri-apps/plugin-fs": "^2.4.5",
    "@tauri-apps/plugin-opener": "^2",
    "nanoid": "^5.1.6",
    "three": "^0.182.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.58.2",
    "@sveltejs/adapter-static": "^3.0.6",
    "@sveltejs/kit": "^2.9.0",
    "@sveltejs/vite-plugin-svelte": "^5.0.0",
    "@tauri-apps/cli": "^2",
    "@types/node": "^25.2.3",
    "@types/three": "^0.182.0",
    "svelte": "^5.0.0",
    "svelte-check": "^4.0.0",
    "typescript": "~5.6.2",
    "vite": "^6.0.3"
  }
}
